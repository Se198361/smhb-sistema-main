# Variáveis de ambiente - exemplo
# Preencha com seus valores locais e configure na Vercel (Production + Preview)

# Frontend (Vite) - visíveis no bundle
VITE_SUPABASE_URL=https://SEU-PROJETO.supabase.co
VITE_SUPABASE_ANON_KEY=SEU_ANON_KEY
VITE_DEBUG_LOGS=false

# Personalização visual (opcional)
VITE_LOGO_URL=/smhb-logo.png
VITE_EMBAIXADORES_LOGO_URL=/er-logo.png
VITE_EMBAIXADORES_LOGO_STYLE=poster

# Backend/Server-only (não usados no frontend Vercel; não commitar valores reais)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
DATABASE_URL=postgresql://usuario:senha@host/neondb?sslmode=require
POSTGRES_PRISMA_URL=postgres://postgres:senha@host:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://postgres:senha@host:5432/postgres?sslmode=require
POSTGRES_USER=postgres
POSTGRES_PASSWORD=senha
POSTGRES_HOST=db.seuprojeto.supabase.co
POSTGRES_DATABASE=postgres

# App local (se houver backend local)
PORT=3001
JWT_SECRET=defina-um-segredo-seguro-aqui
APP_BASE_URL=http://localhost:5175

# SMTP (opcional)
SMTP_HOST=smtp.seuprovedor.com
SMTP_PORT=587
SMTP_USER=usuario@seuprovedor.com
SMTP_PASS=sua_senha_de_app
SMTP_FROM="SMHB <no-reply@seuprovedor.com>"